<% content_for(:title, "#{@post.title} — Henrique Cardoso de Faria") %>
<% content_for(:og_type, "article") %>

<% content_for(:head) do %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "<%= @post.title %>",
  "datePublished": "<%= @post.published_at.iso8601 %>",
  "dateModified": "<%= @post.updated_at.iso8601 %>",
  "url": "<%= request.original_url %>",
  "author": {
    "@type": "Person",
    "@id": "https://hencf.org/#person",
    "name": "Henrique Cardoso de Faria"
  }
}
</script>
<% end %>

<%= render "shared/nav", active: :blog, home: false %>

<main>
  <article class="section">
    <div class="container">
      <header class="post-header">
        <time class="post-date" datetime="<%= @post.published_at.iso8601 %>">
          <%= @post.published_at.strftime("%B %-d, %Y") %>
        </time>
        <h1 class="post-title"><%= @post.title %></h1>
      </header>

      <div class="post-body">
        <%= @post.body_html %>
      </div>

      <footer class="post-footer">
        <a href="/blog">&larr; Back to blog</a>
      </footer>
    </div>
  </article>
</main>

<footer class="footer">
  <div class="container">
    <p>Henrique Cardoso de Faria · <%= Date.current.year %></p>
  </div>
</footer>
